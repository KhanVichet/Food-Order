<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.CheckOutOrderActivity"
    android:padding="16dp">

    <!-- Success Check Icon -->
    <ImageView
        android:id="@+id/successIcon"
        android:layout_width="185dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:contentDescription="Success Icon"
        android:src="@drawable/green_check_mark_icon_with_circle_tick_box_check_list_circle_frame_checkbox_symbol_sign_png" />

    <!-- Congratulations Text -->
    <TextView
        android:id="@+id/congratulationsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/successIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Congratulations!!!"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <!-- Subtext -->
    <TextView
        android:id="@+id/orderMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/congratulationsText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Your order has been taken and is being attended to"
        android:textSize="14sp"
        android:textColor="#555555"
        android:gravity="center"/>

    <!-- Track Order Button -->
    <Button
        android:id="@+id/btnTrackOrder"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/orderMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF9800"
        android:text="Track order"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <!-- Continue Shopping Button -->
    <Button
        android:id="@+id/btnContinueShopping"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnTrackOrder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFF3E0"
        android:text="Continue shopping"
        android:textColor="#FF9800"
        android:textStyle="bold"/>
</RelativeLayout>